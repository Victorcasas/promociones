<% content_for :title do %>Foobar Kadigan<% end %>
<% content_for :description do %>Website of Foobar Kadigan<% end %>
<section>
  <img src="http://lorempixel.com/1170/600/cats/1">
</section>
<section>
  <div class="column">
    <h2>Stay in touch.</h2>
  </div>
  <div class="column">
    <div class="form-centered">
      <%= simple_form_for @calculo do |f| %>
        <%= f.error_notification %>
        <%= f.input :cantidadAM, label: false, :placeholder => 'Unidades de AM' %>
        <br/>
        <%= f.error_notification %>
        <%= f.input :cantidadAC, label: false, :placeholder => 'Unidades de AC' %>
        <br/>
        <%= f.error_notification %>
        <%= f.input :cantidadCA, label: false, :placeholder => 'Unidades de CA' %>
        <br/>
        <%= f.button :submit, "Calcular", :class => "submit" %>
      <% end %>
    </div>
  </div>
</section>
